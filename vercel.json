{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd .. && pnpm install --no-frozen-lockfile && cd client && pnpm install --no-frozen-lockfile",
        "buildCommand": "pnpm build"
      }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "cd .. && pnpm install --no-frozen-lockfile && cd server && pnpm install --no-frozen-lockfile",
        "buildCommand": "pnpm build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}
